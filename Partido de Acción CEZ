<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nombre = $_POST["nombre"];
    $correo = $_POST["correo"];
    $comentario = $_POST["comentario"];

    // Configura los datos de Gmail
    $to = "
    Yaeljmedina10@gmail.com";  // Reemplaza con tu dirección de Gmail
    $subject = "Nuevo comentario de $nombre";
    $message = "Nombre: $nombre\nCorreo: $correo\nComentario:\n$comentario";
    $headers = "From: $correo";

    // Envía el correo electrónico
    mail($to, $subject, $message, $headers);

    // Redirige de vuelta a la página de contacto
    header("Location: index.html");
}
?>
